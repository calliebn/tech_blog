<div class="section">
    <h2>Log In</h2>

    <form id="login-form">
        <div class="field" id="login-form">
            <p class="control">
                <input class="input" type="email" placeholder="Email" id="email-login">
            </p>
        </div>
        <div class="field">
            <p class="control">
                <input class="input" type="password" placeholder="Password" id="password-login">
            </p>
        </div>
        <div class="field">
            <p class="control">
                <button class="button is-success" type="submit" id="btn_login">
                    Log In!
                </button>
            </p>
        </div>
    </form>

    <a href="/signup">Create a new user</a>
    <script src="/js/loggedin.js"></script>
</div>