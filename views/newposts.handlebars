<div class="createpost">
    <h2>Create Post</h2>
    <form id="new-post-form">
        <div class="form-entry">
            <label class="label">Title</label>
            <input type="text" id="blog-title" />
        </div>
        <div class="form-entry">
            <label class="label">Content</label>
            <textarea id="blog-content" name="blog-content" rows="4" cols="50"></textarea>
        </div>
        <div class="field">
            <p class="control">
                <button class="button is-success" type="submit" id="btn_login">
                    Create Post
                </button>
            </p>
        </div>
    </form>


    <script src="/js/new-post.js"></script>
</div>