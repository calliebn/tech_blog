<div class="createpost">
    <h2>Create Post</h2>
    <form id="post-form">
        <div>
            <label>Title</label>
            <input type="text" id="blog-title" />
            <label>Content</label>
            <textarea id="blog-content" name="blog-content" rows="4" cols="50"></textarea>
        </div>
        <button type="submit" id="btn_login">Create Post</button>
    </form>

    <a href="/signup">Create a new user</a>
    <script src="/js/loggedin.js"></script>
</div>