<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post-form">
        <label for="post-title" class="form-label">Title</label>
        <textarea class="textarea" id="post-title">{{post.title}}</textarea>
        <label class="form-label" for="content">Content</label>
        <textarea class="textarea" placeholder="10 lines of textarea" rows="10" id="content">{{post.content}}</textarea>
        <button type="submit" class="btn">Update Post</button>
        <button type="submit" class="delete-post-btn">Delete Post</button>
    </form>
</div>


<script src="/js/edit-post.js"></script>
<script src="/js/delete-post.js"></script>